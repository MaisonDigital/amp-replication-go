# =================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this file to .env.local and fill in your actual values
# =================================================================

# =================================================================
# SITE CONFIGURATION
# =================================================================
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME="Your Real Estate Company"

# =================================================================
# API CONFIGURATION
# =================================================================
# Your FastAPI backend URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# =================================================================
# GOOGLE MAPS
# =================================================================
# Get your API key from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =================================================================
# ANALYTICS & TRACKING
# =================================================================
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager ID
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Facebook Pixel ID
NEXT_PUBLIC_FB_PIXEL_ID=your_facebook_pixel_id

# =================================================================
# EMAIL & FORMS
# =================================================================
# Email service configuration (e.g., SendGrid, Mailgun, etc.)
EMAIL_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TO=info@yourdomain.com

# Contact form webhook URL (if using a service like Formspree, Netlify Forms, etc.)
CONTACT_FORM_WEBHOOK=https://formspree.io/f/your-form-id

# =================================================================
# SOCIAL MEDIA
# =================================================================
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/yourpage
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/yourpage
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourpage
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany

# =================================================================
# BUSINESS INFORMATION
# =================================================================
NEXT_PUBLIC_COMPANY_NAME="Your Real Estate Company"
NEXT_PUBLIC_COMPANY_PHONE="(613) 555-0123"
NEXT_PUBLIC_COMPANY_EMAIL="info@yourdomain.com"
NEXT_PUBLIC_COMPANY_ADDRESS="123 Main Street, Ottawa, ON K1A 0A1"

# Office key for featured listings API
NEXT_PUBLIC_OFFICE_KEY=your_office_key_here

# =================================================================
# DEVELOPMENT
# =================================================================
# Only set to true in development
NEXT_PUBLIC_DEV_MODE=false

# Disable analytics in development
NEXT_PUBLIC_DISABLE_ANALYTICS=true