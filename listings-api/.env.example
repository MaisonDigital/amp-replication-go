# =================================================================
# APPLICATION SETTINGS
# =================================================================
ENVIRONMENT=development
DEBUG=true
TIMEZONE=America/Toronto

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL Database Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postgres
POSTGRES_PORT=5432
DATABASE_NAME=trreb_listings

# =================================================================
# REDIS CACHE CONFIGURATION
# =================================================================
REDIS_PORT=6379
REDIS_DB=0

# =================================================================
# API CONFIGURATION
# =================================================================
API_PORT=8000
API_V1_STR=/api/v1

# Pagination Settings
PAGE_SIZE_DEFAULT=20
PAGE_SIZE_MAX=100

# Cache Settings (in seconds)
CACHE_TTL_SECONDS=300
SEARCH_CACHE_TTL=180

# =================================================================
# CORS AND SECURITY
# =================================================================
# Development CORS (add your local development URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Production CORS (uncomment and update for production)
# ALLOWED_ORIGINS=https://maisongroup.ca,https://www.maisongroup.ca,https://api.maisongroup.ca

# =================================================================
# PRODUCTION SETTINGS (for maisongroup.ca deployment)
# =================================================================
# Uncomment and configure these for production deployment

# Domain Configuration
# DOMAIN=maisongroup.ca
# API_DOMAIN=api.maisongroup.ca

# SSL/HTTPS Configuration
# HTTP_PORT=80
# HTTPS_PORT=443

# Production Database (if different from development)
# PROD_DATABASE_HOST=your-production-db-host
# PROD_DATABASE_PASSWORD=your-production-db-password

# =================================================================
# OPTIONAL SERVICES
# =================================================================
# Database Admin Interface (Adminer)
ADMINER_PORT=8080

# =================================================================
# MLS CONFIGURATION (for Go service)
# =================================================================
# These should match your Go service configuration
# MLS_SYSTEM_NAME=trreb
# MLS_API_TOKEN=your_mls_api_token
# DDF_CLIENT_ID=your_ddf_client_id
# DDF_CLIENT_SECRET=your_ddf_client_secret

# =================================================================
# MONITORING AND LOGGING
# =================================================================
# Log Levels: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO